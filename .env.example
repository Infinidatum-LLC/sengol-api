# Sengol API - Environment Variables Template
# Copy to .env.local and fill in your values

# ==============================================================================
# DATABASE - Shared with Sengol frontend
# ==============================================================================
DATABASE_URL=postgresql://user:password@host/neondb?sslmode=require

# ==============================================================================
# FASTIFY & SERVER
# ==============================================================================
PORT=3000
NODE_ENV=development

# ==============================================================================
# JWT & AUTHENTICATION
# ==============================================================================
JWT_SECRET=your-super-secret-jwt-key-here

# ==============================================================================
# STRIPE - Payment Processing
# ==============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_test_...

# ==============================================================================
# VECTOR DATABASE (d-vecDB)
# ==============================================================================
DVECDB_HOST=99.213.88.59
DVECDB_PORT=40560

# ==============================================================================
# LLM PROVIDERS
# ==============================================================================
# OpenAI (optional - for embeddings and analysis)
OPENAI_API_KEY=sk-...

# Anthropic Claude (optional - for analysis)
ANTHROPIC_API_KEY=sk-ant-...

# ==============================================================================
# LOGGING & MONITORING
# ==============================================================================
LOG_LEVEL=debug

# ==============================================================================
# CACHE CONFIGURATION
# ==============================================================================
# Set to 'true' to enable caching, 'false' to disable
CACHE_ENABLED=true

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL=300

# ==============================================================================
# TRIAL SYSTEM CONFIGURATION
# ==============================================================================
# Trial duration in days
TRIAL_DURATION_DAYS=7

# ==============================================================================
# OPTIONAL: Python Backend (for future features)
# ==============================================================================
PYTHON_BACKEND_URL=http://localhost:8000

# ==============================================================================
# OPTIONAL: Redis (for distributed caching)
# ==============================================================================
REDIS_URL=redis://localhost:6379
